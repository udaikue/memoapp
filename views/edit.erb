<form method="post" action="edit">
  <input type="hidden" name="_method" value="patch">
  <div class="item">
    <label class="label">タイトル</label>
    <input class="inputs" type="text" name="memo_title" required="required" value=<% @results.each do |r| %>
    <%= r['title'] %>
  <% end %>>
  </div>
  <div class="item">
    <label class="label">内容</label>
    <textarea class="inputs" name="memo_content"><% @results.each do |r| %><%= r['content'] %><% end %></textarea>
  </div>

  <div class="btn-area">
    <input type="submit" value="保存"><input type="submit" value="キャンセル" onclick="location.href='memos'">
  </div>
</form>
